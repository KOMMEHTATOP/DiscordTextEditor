<Window x:Class="DiscordTextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscordTextEditor"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#170F46" MouseDown="Drag">
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="219*"/>
            <RowDefinition Height="160*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>
        <TextBlock 
            Text="СЕРВИСЫ" 
            HorizontalAlignment="Center" VerticalAlignment="Center" 
            Foreground="White" 
            FontSize="26" FontWeight="Bold"/>

        <Button x:Name="CloseButton" 
                Content="X" 
                Grid.Column="1" 
                Margin="8" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="CloseApp"/>
        
        <Grid x:Name="FirstControlBlock" 
              HorizontalAlignment="Center" VerticalAlignment="Center" 
              Height="219" 
              Grid.Row="1" 
              Width="205">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Content="B" FontSize="16"/>
            <TextBlock Grid.Column="2" Text="Заголовок первого уровня" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="1" Content="B" FontSize="14" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Заголовок второго уровня" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="2" Content="B" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock Grid.Column="2" Grid.Row="2" Text="Заголовок третьего уровня" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="3" Content="B" FontSize="8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock Grid.Column="2" Grid.Row="3" Text="Поддекст" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="4" Content="B" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Grid.Row="4" Text="Жирный текст" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="5" Content="B" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontStyle="Italic"/>
            <TextBlock Grid.Column="2" Grid.Row="5" Text="Курсив" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="6" Content="B" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            <TextBlock Grid.Column="2" Grid.Row="6" Text="Подчеркнутый" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="7" Content="B" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            <TextBlock Grid.Column="2" Grid.Row="7" Text="Зачеркнутый" Style="{StaticResource TextStyle}"/>
            <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Grid.Row="8" Content="" FontSize="12" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <TextBlock Grid.Column="2" Grid.Row="8" Text="Скрытый" Style="{StaticResource TextStyle}"/>

        </Grid>
        <Grid x:Name="SecondControlBlock" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="160" Width="205">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Текст" Style="{StaticResource TextStyle}"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="Gray" Background="#4E5057" />
                <Button x:Name="Red" Background="#DC322F" Grid.Column="1"/>
                <Button x:Name="Green" Background="#798A08" Grid.Column="2"/>
                <Button x:Name="yellow" Background="#B58901" Grid.Column="3"/>
                <Button x:Name="Blue" Background="#258BD2" Grid.Column="4"/>
                <Button x:Name="Pink" Background="#C3367A" Grid.Column="5"/>
                <Button x:Name="Cyan" Background="#2A8982" Grid.Column="6"/>
                <Button x:Name="White" Background="#F7F7F8" Grid.Column="7"/>
            </Grid>
            <TextBlock Text="Фон" Grid.Row="2" Style="{StaticResource TextStyle}"/>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Background="#002B36" />
                <Button Background="#CB4B15" Grid.Column="1"/>
                <Button Background="#586E75" Grid.Column="2"/>
                <Button Background="#657B83" Grid.Column="3"/>
                <Button Background="#839396" Grid.Column="4"/>
                <Button Background="#6C71C4" Grid.Column="5"/>
                <Button Background="#93A1A1" Grid.Column="6"/>
                <Button Background="#FDF6E3" Grid.Column="7"/>
            </Grid>
            <Button Content="B - жирный шрифт" Grid.Row="4"/>
            <Button Content="B - подчеркнуть" Grid.Row="5"/>
        </Grid>
        <wv2:WebView2 x:Name="WebViewControl" Source="about:blank"
                      Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5,5,5,48" VerticalAlignment="Stretch"/>
        
        <Button Grid.Column="1" Grid.Row="2" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Content="Сбросить" 
                Height="27" Width="125"
                Margin="70,123,0,0"/>

        <Button Grid.Column="1" Grid.Row="2" 
                HorizontalAlignment="Left" VerticalAlignment="Top"  
                Content="Копировать" 
                Height="27" Width="125"
                Margin="342,123,0,0"/>
    </Grid>
</Window>
