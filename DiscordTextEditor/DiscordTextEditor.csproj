<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="View\Web\webEditor.html" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="View\Web\webEditor.html">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.2957.106" />
    <PackageReference Include="TextCopy" Version="6.2.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="AnsiLibEasy">
      <HintPath>..\..\AnsiLibEasy\AnsiLibEasy\bin\Debug\net8.0\AnsiLibEasy.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
